{
  "name": "franz-cli",
  "version": "0.0.0",
  "description": "The command line interface for franz",
  "main": "index.js",
  "repository": "franzsh/franz-cli",
  "author": "Bu Kinoshita <bukinoshita@gmail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "xo --quiet && lint-staged",
    "lint": "xo --quiet"
  },
  "devDependencies": {
    "ansi-escapes": "^2.0.0",
    "ava": "^0.19.1",
    "chalk": "^1.1.3",
    "eslint-config-prettier": "^2.1.1",
    "lint-staged": "^3.6.0",
    "ora": "^1.2.0",
    "xo": "^0.18.2"
  },
  "xo": {
    "extends": "prettier"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  }
}
